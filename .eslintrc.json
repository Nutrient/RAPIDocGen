{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "impliedStrict": true
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "semi": ["error", "always"],
        "no-var": 0,
        "prefer-const": ["error", {
        	"destructuring": "any",
        	"ignoreReadBeforeAssign": false
		}]
    },
    "env": {
        "node": true
    }
}